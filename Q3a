dict1 = {'Ten': 10, 'twenty': 20, 'thirty': 30}
dict2 = {'thirty': 30, 'fourty': 40, 'fifty': 50}

# Using the | operator
merged_dict = dict1 | dict2
print("Merged dictionary (using | operator):", merged_dict)

# Using dictionary unpacking
merged_dict_unpacking = {**dict1, **dict2}
print("Merged dictionary (using dictionary unpacking):", merged_dict_unpacking)
employees = ['Hung', 'Hieu']
defaults = {'designation': 'Developer', 'salary': 10000}

# Initialize employee dictionaries with default values
employee_dicts = {employee: defaults.copy() for employee in employees}

print("Initialized employee dictionaries:")
for emp, emp_dict in employee_dicts.items():
    print(f"{emp}: {emp_dict}")
